/* pages/shopcart/shopcart.wxss */
.shopcartcheckbox {
    display: flex;

}

.van-checkbox__label {
    flex: 1;
}

.shopcartcheckbox image {
    width: 80px;
    height: 80px
}

.shopcartinfo {
    flex: 1;
    padding-left: 15px;
}

.shopcartcheck {
    padding: 16px;
    border-radius: 5px;
    background-color: #fff;
    margin: 10px 0;
}

.skusaleattrvalueList {
    display: flex;
    font-family: PingFang SC;
    font-size: 14px;
    font-weight: 400;
    line-height: 28px;
    letter-spacing: 0px;
    text-align: left;
}

.saleattrname {
    margin-right: 5px;
}

.shopcaertpricebox {
    height: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.skuname {
    font-family: PingFang SC;
    font-size: 15px;
    font-weight: 500;
    line-height: 28px;
    letter-spacing: 0px;
    text-align: left;
    color: #333;
}

.shopcartprice {
    font-family: PingFang SC;
    font-size: 14px;
    font-weight: 500;
    line-height: 20px;
    letter-spacing: 0em;
    text-align: left;
}

.shopcartcount {
    font-family: PingFang SC;
    font-size: 14px;
    font-weight: 500;
    line-height: 20px;
    letter-spacing: 0em;
    text-align: left;

}

.van-swipe-cell__right {
    width: 65px;
    background-color: #FD3333;
    font-family: PingFang SC;
    font-size: 14px;
    font-weight: 500;
    line-height: 20px;
    letter-spacing: 0em;
    text-align: left;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 0px 5px 5px 0;
}

.van-checkbox__icon--checked {
    background-color: #24AC6B !important;
    border-color: #24AC6B !important;
}