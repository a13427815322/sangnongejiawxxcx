/* detail.wxss */
.detail-container {
    padding: 16px;
}

.header-img {
    width: 100%;
    height: 200px;
}

.article-info {
    margin-top: 10px;
    display: flex;
    justify-content: space-between;
    color: #666;
}

.title {
    font-size: 18px;
    font-weight: bold;
    margin-top: 10px;
}

.content-scroll {

    max-height: 100vh;
    /* Adjust the max-height as needed */
    overflow-y: auto;
}

.paragraph {
    margin-bottom: 16px;
    font-size: 14px;
    line-height: 1.6;
}

.source {
    font-weight: bold;
}

.comment-count {
    color: #24AC6B;
}

.nav-bar {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 99;
}