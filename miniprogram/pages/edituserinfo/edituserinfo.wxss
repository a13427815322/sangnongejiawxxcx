/* pages/edituserinfo/edituserinfo.wxss */
.avatar-wrapper {
    position: relative;
    padding: 0;
    width: 80px;
    height: 80px;
    overflow: hidden;
    border-radius: 50%;
    margin-bottom: 10px;

}

.avatarbox {
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
}

.avatar-wrapper::after,
.upadateavtar button::after {
    border: none;
}

.avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;

}

.upadateavtar {
    height: 50px;
    display: flex;
    justify-content: center;
    background-color: #fff;

}

.upadateavtar button {
    height: 30px;
    line-height: 30px;
    color: cornflowerblue;
    background-color: #fff;
}

.commentbutton {
    flex: 1;
    padding: 16px;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
}