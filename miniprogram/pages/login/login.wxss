.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
}

.form-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 20px;
}

.avatar-wrapper {
    position: relative;
    padding: 0;
    width: 80px;
    height: 80px;
    overflow: hidden;
    border-radius: 50%;
    margin-bottom: 10px;
}

.avatar-wrapper::after {
    border: none;
}

.avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
}

.nickname-input {
    margin: 10px 0;
}

.switch-text {
    margin-top: 10px;
    text-align: center;
    font-size: 14px;
    color: #888;
}

.eye-icon {
    width: 20px;
    height: 20px;
    background-image: url("http://localhost:3002/uploads/login/lookpassword.png");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: contain;
    cursor: pointer;
}

.eye-icon.show {
    background-image: url("http://localhost:3002/uploads/login/lookpassword.png");
}

.eye-icon.hide {
    background-image: url("http://localhost:3002/uploads/login/closepassword.png");
}

.loginbutton {
    margin-top: 10px;
    display: flex;
    justify-content: center;
    align-items: center;

}