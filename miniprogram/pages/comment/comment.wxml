<!-- pages/comment/comment.wxml -->
<van-nav-bar title="评论" bind:click-left="onClickLeft">
    <van-icon name='arrow-left' slot="left" />
</van-nav-bar>
<view wx:for="{{dingdandetail.shopcart}}" class="commentbox">
    <view class="skuimage">
        <image src="{{item.skuimage}}" />
    </view>
    <view class="skuname">{{item.skuname}}</view>
    <view class="commentbutton">
        <van-button bind:tap="tocomment" data-spuid="{{item.spuid}}" data-skuid="{{item.skuid}}" round color="#24AC6B" size="small">
            评价
        </van-button>
    </view>
</view>
<van-popup show="{{ showcomment }}" closeable position="center" bind:close="closecomment">
    <view style="width:90vw;padding:30px 16px">
        <van-field value="{{comment}}" label="评论" custom-class="commentfile" type="textarea" placeholder="请输入留言" autosize border="{{flase}}" bind:input="changecoment" />
        <view class="commentbutton">
            <van-button bind:tap="commentspu" round color="#24AC6B" size="small">评价</van-button>
        </view>
    </view>
</van-popup>