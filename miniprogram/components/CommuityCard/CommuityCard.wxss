.commuitycard {
    box-sizing: border-box;
    padding: 12px;
    background-color: #fff;
}

.informationbar {
    display: flex;
}

.informationbar .adressinformation {
    flex: 2.5;
}

.informationbar .interaction {
    flex: 1;
    display: flex;
}

.informationbar .interaction .upvote {
    flex: 1;
}

.informationbar .interaction .comment {
    flex: 1;
}

.userinformation {
    display: flex;
}

.userinformation .avatar image,
.userinformation .avatar {
    width: 48px;
    height: 48px;
    border-radius: 4px;
    margin: 0 12px 12px 0;
}

.userinformation .username,
.commuityconent {
    flex: 1;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 28px;
    letter-spacing: 0px;
    text-align: left;
}

.userinformation .username .usernickname {
    font-size: 14px;
    color: #333333;

}

.userinformation .username .updatedate {
    color: #666666;
    font-size: 12px;

}

.commuityconent {
    width: 100%;
    margin: 12px;
}

.image-box {
    position: relative;
    display: block;
    overflow: hidden;
    margin: 2vw;
    box-sizing: border-box;
}

.upvote {
    margin-right: 6px;
}